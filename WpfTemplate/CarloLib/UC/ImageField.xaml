<UserControl x:Class="WpfTemplate.CarloLib.ImageField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTemplate.CarloLib"
             mc:Ignorable="d">
    <Grid Name="ParentGrid" Loaded="ParentGrid_Loaded">
        <Image Height="{Binding Width}" Width="{Binding Height}" Source="{Binding ImageSource}"/>
    </Grid>
</UserControl>
