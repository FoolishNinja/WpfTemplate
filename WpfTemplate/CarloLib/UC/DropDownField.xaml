<UserControl x:Class="WpfTemplate.CarloLib.UC.DropDownField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTemplate.CarloLib.UC"
             mc:Ignorable="d">
    <Grid>
        <ComboBox Name="ComboBox" ItemsSource="{Binding Path=Items}" SelectedValue="{Binding SelectedItem}" SelectionChanged="ComboBox_SelectionChanged" Text="{Binding Placeholder}" IsEditable="{Binding IsEditable}" IsReadOnly="True" IsSynchronizedWithCurrentItem="True"></ComboBox>
    </Grid>
</UserControl>
