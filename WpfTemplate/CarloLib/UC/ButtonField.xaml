<UserControl x:Class="WpfTemplate.CarloLib.UC.ButtonField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTemplate.CarloLib.UC"
             mc:Ignorable="d" >
    <Grid>
        <Button Content="{Binding Path=Label, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Click="Button_Click"></Button>
    </Grid>
</UserControl>
